<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE urlrewrite PUBLIC "-//tuckey.org//DTD UrlRewrite 3.0//EN"
    "http://tuckey.org/res/dtds/urlrewrite3.0.dtd">

<urlrewrite default-match-type="wildcard">

    <!-- Add rules here for anything that shouldn't be served up by Spring MVC. -->
    <rule>
        <from>/</from>
        <to>/app/login</to>
    </rule>
    <rule>
        <from>/app/**</from>
        <to last="true" type="redirect">%{context-path}/$1</to>
    </rule>
    <rule>
        <from>/services/**</from>
        <to>/services/$1</to>
    </rule>
    <rule>
        <from>/common/**</from>
        <to>/common/$1</to>
    </rule>
     <rule>
        <from>/ng/**</from>
        <to>/ng/$1</to>
    </rule>
    <rule>
    	<from>/weixin/js/**</from>
    	<to>/weixin/js/$1</to>	
    </rule>
    <rule>
    	<from>/weixin/css/**</from>
    	<to>/weixin/css/$1</to>	
    </rule>
    <rule>
    	<from>/weixin/img/**</from>
    	<to>/weixin/img/$1</to>	
    </rule>
    <rule>
    	<from>/weixin/**</from>
    	<to>/weixin/$1</to>	
    </rule>
    <rule>
        <from>/images/**</from>
        <to>/images/$1</to>
    </rule>
   
     <rule>
        <from>/styles/**</from>
        <to>/styles/$1</to>
    </rule>
    <rule>
        <from>/scripts/**</from>
        <to>/scripts/$1</to>
    </rule>
    <rule>
        <from>/assets/**</from>
        <to>/assets/$1</to>
    </rule>
    <rule>
        <from>/bootstrap/**</from>
        <to>/bootstrap/$1</to>
    </rule>
    <rule>
        <from>/plugins/**</from>
        <to>/plugins/$1</to>
    </rule>
    <rule>
        <from>/css/**</from>
        <to>/css/$1</to>
    </rule>
    <rule>
        <from>/crossdomain.xml</from>
        <to>/crossdomain.xml</to>
    </rule>
    <rule>
        <from>/favicon.ico</from>
        <to>/favicon.ico</to>
    </rule>
    <rule>
        <from>/webjars/**</from>
        <to>/webjars/$1</to>
    </rule>

    <!-- Spring MVC -->
    <rule>
        <from>/**</from>
        <to>/app/$1</to>
    </rule>
    <outbound-rule>
        <from>/app/**</from>
        <to>/$1</to>
    </outbound-rule>
    <!-- Remove JSESSIONID from URLs when cookies disabled -->
    <!-- http://stackoverflow.com/questions/962729/is-it-possible-to-disable-jsessionid-in-tomcat-servlet -->
    <outbound-rule encodefirst="true" match-type="regex">
        <name>Strip URL Session ID's</name>
        <from>^(.*?)(?:\;jsessionid=[^\?#]*)?(\?[^#]*)?(#.*)?$</from>
        <to>$1$2$3</to>
    </outbound-rule>
</urlrewrite>